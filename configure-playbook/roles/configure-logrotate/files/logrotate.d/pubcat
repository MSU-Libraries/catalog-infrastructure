/var/lib/docker/volumes/*_logs/_data/*/*.log /var/lib/docker/volumes/traefik_logs/_data/*.log {
  rotate 7
  daily
  compress
  missingok
  delaycompress
  prerotate
    bash -c "[[ ! $1 =~ _latest ]]"
  endscript
  lastaction
    docker ps --format '{{.Names}}' --filter name=traefik | xargs -I {} sh -c "docker kill --signal=USR1 {}"
    docker ps --format '{{.Names}}' --filter name=catalog_catalog | xargs -I {} sh -c "docker exec {} apachectl graceful"
  endscript
}
